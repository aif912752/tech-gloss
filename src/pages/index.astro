---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all glossary entries (will be empty for now)
const glossaryEntries = await getCollection('glossary');
---

<BaseLayout title="TechGloss - Developer Glossary" description="คลังคำศัพท์สำหรับนักพัฒนา">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        TechGloss
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        คลังคำศัพท์ทางเทคนิคสำหรับนักพัฒนา เรียนรู้และทำความเข้าใจคำศัพท์ต่างๆ ในโลกของการพัฒนาซอฟต์แวร์
      </p>
    </div>

    {glossaryEntries.length === 0 ? (
      <div class="text-center py-12">
        <div class="text-gray-500 dark:text-gray-400">
          <svg class="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h3 class="text-lg font-medium mb-2">ยังไม่มีคำศัพท์</h3>
          <p>คำศัพท์จะถูกเพิ่มในขั้นตอนถัดไป</p>
        </div>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {glossaryEntries.map((entry) => (
          <div class="glossary-card">
            <h3 class="text-xl font-semibold mb-2">{entry.data.title}</h3>
            <span class="inline-block px-2 py-1 text-sm bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded mb-2">
              {entry.data.category}
            </span>
            <p class="text-gray-600 dark:text-gray-300">{entry.data.description}</p>
          </div>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
