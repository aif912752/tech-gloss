  title,
  description = "TechGloss - Developer Glossary",
  type = 'website',
  image,
  imageAlt,
  publishedTime,
  modifiedTime,
  author,
  tags,
  category,
  noindex,
  canonical,
  entry,
  allTerms,
  structuredDataType = 'website',
