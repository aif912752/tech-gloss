        if (
          window.matchMedia &&
          window.matchMedia("(prefers-color-scheme: dark)").matches
        ) {
          return "dark";
        }
        return "light";
      };
      const theme = getTheme();
      if (theme === "dark") document.documentElement.classList.add("dark");
