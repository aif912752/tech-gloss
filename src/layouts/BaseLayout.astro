  type?: 'website' | 'article';
  image?: string;
  imageAlt?: string;
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  tags?: string[];
  category?: string;
  noindex?: boolean;
  canonical?: string;
  entry?: any;
  allTerms?: any[];
  structuredDataType?: 'website' | 'glossary' | 'term';
}

